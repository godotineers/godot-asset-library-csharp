  "AllowedHosts": "*",
  "Settings": {
    "determineRouteBeforeAppMiddleware": true,
    "displayErrorDetails": true,
    "renderer": {
      "template_path": "/../templates/"
    },
    "logger": {
      "name": "slim-app",
      "path": "/../logs/app.log"
    },
    "mail": {
      "from": "no-reply@localhost.localdomain"
